<!--pages/xiyu/xiyu.wxml-->
<view class="page">
  <view class="page-body">
    <view class="page-section page-section-spacing weui-flex">
        <image class="userinfo-avatar" src="{{userInfo.avatar}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="page-section page-section-spacing">
        <swiper indicator-dots="true" autoplay="true" interval="2000" duration="500">
        <block wx:for="{{background}}" wx:key="*this">
          <swiper-item>
            <xy-card src="/assets/like.png" title="{{item}}" bindclick="cardClick">
                <view class="xy-card__content xy-padding">这是一个基础卡片的示例。</view>
            </xy-card>
          </swiper-item>
        </block>
        </swiper>
    </view>
    <view class="page-section page-section-spacing">
        <mp-grids grids="{{talks}}"></mp-grids>
    </view>
  </view>  
</view>

